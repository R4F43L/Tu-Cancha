<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :usertype," Seleccione si es Propietario" %><br />
    <%= f.check_box :usertype %>
  </div>
  
  <div class="field">
    <%= f.label :name,"Nombres"%><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :lastname,"Apellidos"%><br />
    <%= f.text_field :lastname %>
  </div>
  
  <div class="field">
    <%= f.label :doctype,"Tipo de Documento"%><br />
    <%= f.select :doctype,
    options_for_select([
    ["Seleccione tipo de Documento", ""],
    "DNI", 
    "Pasaporte", 
    "Carnet de Extranjeria"]) %>
  </div>
  
  <div class="field">
    <%= f.label :docnumber,"Numero de Documento"%><br />
    <%= f.text_field :docnumber %>
  </div>
  
  <div class="field">
    <%= f.label :email,"Correo Electronico"%><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password,"Password"%><br />
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :birthdate,"Fecha de Nacimiento"%><br />
    <%= f.date_select :birthdate %>
  </div>
  
  <div class="field">
    <%= f.label :cellphone,"Numero de Celular"%><br />
    <%= f.text_field :cellphone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
